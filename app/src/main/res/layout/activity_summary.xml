<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context="com.example.android.finalproject_yaocmengqid.SummaryActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/pie_chart"
        android:scaleType="centerInside"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/food_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/food_money"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/trans_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Transportation"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/trans_money"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/house_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Accomodation"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/house_money"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/ticket_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Ticket"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/ticket_money"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/other_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/other_money"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="My Consumption"
            android:textSize="12sp"
            android:id="@+id/personal_consumption"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Group Consumption"
            android:textSize="12sp"
            android:id="@+id/group_consumption"/>

    </LinearLayout>

</LinearLayout>

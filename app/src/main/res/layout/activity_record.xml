<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="Total Amount: $"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/billAmount"
                android:inputType="numberDecimal"
                android:hint="Please record the bill" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="Date"
                android:textSize="16sp" />

            <Button
                android:id="@+id/dateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showDatePickerDialog"
                android:text="Please pick a date" />


        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stretchColumns="0">

        <TableRow>

            <RadioButton
                android:id="@+id/food_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food"
                android:onClick="pickType"/>

            <RadioButton
                android:id="@+id/trans_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="transportation"
                android:onClick="pickType" />
        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/entertainment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"
                android:onClick="pickType" />

            <RadioButton
                android:id="@+id/shelter_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shelter"
                android:onClick="pickType" />
        </TableRow>

        <TableRow>

            <RadioButton
                android:id="@+id/others_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="others"
                android:onClick="pickType" />

        </TableRow>


    </TableLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <TableRow
            android:layout_marginBottom="10dp"
            android:onClick="choosePayer">

            <TextView
            android:layout_column="0"
            android:text="Payer"
            android:textSize="16sp" />

            <TextView
                android:layout_column="0"
                android:text=">>"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:onClick="choosePayer">

            <TextView
                android:id="@+id/payer"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text=""
                android:scaleType="fitStart" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="pay"
                android:textSize="17dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:onClick="chooseMember">

            <TextView
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text="Members"
                android:textSize="16sp" />

            <TextView
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:text=">>"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:onClick="chooseMember">

            <TextView
                android:id="@+id/member"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text=""
                android:scaleType="fitStart" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="took part in"
                android:textSize="17dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="save"
        android:onClick="saveExpense"/>
</TableLayout>


